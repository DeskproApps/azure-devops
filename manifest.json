{
  "name": "@deskpro-apps/azure",
  "title": "Azure",
  "description": "Use Azure",
  "version": "1.0.1",
  "scope": "agent",
  "hasDevMode": true,
  "isSingleInstall": false,
  "targets": [
    {
      "target": "ticket_sidebar",
      "entrypoint": "index.html"
    }
  ],
  "settings": {
    "app_id": {
      "title": "Azure App Id",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false
    },
    "client_secret": {
      "title": "Azure Client Secret",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true
    },
    "organization": {
      "title": "Azure Organization Name",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false
    },
    "global_access_token": {
      "title": "",
      "type": "app_embedded",
      "options": {
        "entrypoint": "#/globalauth"
      },
      "isRequired": true,
      "isBackendOnly": true
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://dev.azure.com/.*",
        "methods": [
          "GET",
          "POST",
          "PUT"
        ],
        "timeout": 10
      },
      {
        "url": "https://vssps.dev.azure.com/.*",
        "methods": [
          "GET",
          "POST",
          "PUT"
        ],
        "timeout": 10
      },
      {
        "url": "https://app.vssps.visualstudio.com/.*",
        "methods": [
          "GET",
          "POST",
          "PUT"
        ],
        "timeout": 10
      }
    ]
  }
}